<project name="MOEA Framework Macros" basedir="." xmlns:if="ant:if" xmlns:unless="ant:unless">

	<!-- Replace tokens in a given file with their property values -->
	<macrodef name="replace-properties">
		<attribute name="file" />
		
		<sequential>
			<dirname property="replace.dir" file="@{file}" />
		    <tempfile property="temp.file" prefix="filter" suffix=".properties" destDir="${replace.dir}" />
		    <echoproperties destfile="${temp.file}" />
		    <replaceregexp file="${temp.file}" match="([^=]*)=" replace="${\1}=" byline="true" />
			<replace summary="true" file="@{file}" replacefilterfile="${temp.file}" />
			<delete file="${temp.file}" />
		</sequential>
	</macrodef>

	<!-- Securely downloads a URL to a file, validating its checksum -->
	<macrodef name="secure-get">
		<attribute name="src" />
		<attribute name="dest" />
		<attribute name="sha1" />
		
		<sequential>
			<get src="@{src}" dest="@{dest}" />
			
			<condition property="@{src}.sha1" value="@{sha1}">
				<matches string="@{sha1}" pattern="^[a-zA-Z0-9]+$" />
			</condition>
			
			<sequential if:set="@{src}.sha1">
				<checksum file="@{dest}" property="@{sha1}" algorithm="SHA-1" verifyProperty="@{src}.checksum.valid"/>
				<delete unless:true="${@{src}.checksum.valid}" file="@{dest}" />
				<fail unless:true="${@{src}.checksum.valid}" message="Invalid checksum for @{dest}" />
			</sequential>
			
			<sequential unless:set="@{src}.sha1">
				<echo>Skipping checksum validation for @{dest}, no SHA1 set</echo>
			</sequential>
		</sequential>
	</macrodef>
	
	<!-- Run native-image command, assumes env and classpath properties are defined -->
	<macrodef name="native-image">
		<attribute name="dir" />
		<attribute name="main" />
		<attribute name="output" />
		
		<sequential>
			<fail message="native-image command not found, please ensure GraalVM or Liberica Native Image Kit (NIK) is installed">
			    <condition>
			    	<not>
			    		<available file="native-image" filepath="${env.PATH}" />
			    	</not>
			    </condition>
			</fail>
			
			<path id="lib.path">
				<path refid="classpath" />
				<pathelement location="${dist}/${shortname}-${version}.jar" />
			</path>

			<pathconvert property="lib.path.local" refid="lib.path" />
			

			<exec executable="native-image" dir="@{dir}">
				<arg value="--no-fallback" />
				<arg value="-classpath" />
				<arg value="${lib.path.local}" />
				<arg value="@{main}" />
				<arg value="-o" />
				<arg value="@{output}" />
			</exec>
		</sequential>
	</macrodef>
	
</project>
